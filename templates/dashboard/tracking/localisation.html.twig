{% extends 'base.html.twig' %}

{% block title %}Suivi de colis{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-center align-items-center flex-column">
        <h1 class="mb-4">{% block h1 %}Ajouter une localisation au colis {{ trackingNumber }}{% endblock %}</h1>
        {{ form_start(form) }}
        
        <div class="mb-3">
            {{ form_row(form.longitude, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="mb-3">
            {{ form_row(form.latitude, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="mb-3">
            {{ form_row(form.step, {'attr': {'class': 'form-select'}}) }}
        </div>

        <div class="text-center mt-4">
            {{ form_row(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>

        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
